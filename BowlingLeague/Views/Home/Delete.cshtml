@{
    ViewData["Title"] = "Delete Bowler";
}

@model BowlingLeague.Models.Bowler
<h2>Confirm bowler deletion</h2>
<h3>Are you sure you want to delete @Model.BowlerFirstName @Model.BowlerLastName?</h3>
<form method="post" asp-action="Delete">
    <button type="submit">Delete</button>
    <a asp-controller="Home" asp-action="Index" class="btn btn-outline-primary">Cancel</a>
    <input type="hidden" asp-for="BowlerID" />
</form>