@{
    ViewData["Title"] = "Bowler Form";
}
@model BowlingLeague.Models.Bowler
<h1>Bowler Form</h1>
<div>
    <form method="post">
        <div asp-validation-summary="All"></div>
        <label asp-for="TeamID">Team ID</label>
        <select asp-for="TeamID">
            <option value="">Select a Team</option>
            @foreach (Team t in ViewBag.Teams)
            {
                <option value="@t.TeamID">@t.TeamName</option>
            }
        </select>
        <br />
        <label asp-for="BowlerFirstName">Bowler First Name</label>
        <input asp-for="BowlerFirstName" />
        <br />
        <label asp-for="BowlerLastName">Bowler Last Name</label>
        <input asp-for="BowlerLastName" />
        <br />
        <label asp-for="BowlerMiddleInit">Bowler Middle Initial</label>
        <input asp-for="BowlerMiddleInit" />
        <br />
        <label asp-for="BowlerAddress">Address</label>
        <input asp-for="BowlerAddress">
        <br />
        <label asp-for="BowlerCity">ity</label>
        <input asp-for="BowlerCity">
        <br />
        <label asp-for="BowlerState">State</label>
        <input asp-for="BowlerState" />
        <br />
        <label asp-for="BowlerZip">Zip</label>
        <input asp-for="BowlerZip" />
        <br />
        <label asp-for="BowlerPhoneNumber">Phone Number</label>
        <input asp-for="BowlerPhoneNumber" />
        <br />
        <button type="submit">Save</button>

    </form>
</div>